<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/SettingsScreenBackgoundStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/common_padding_16">

        <TextView
            android:id="@+id/bt_search_back"
            style="@style/SettingsHeaderStyle"
            android:layout_gravity="start|center_vertical"
            android:drawablePadding="28dp"
            android:text="@string/st_search"
            app:drawableStartCompat="@drawable/ic_arrow_back" />

        <LinearLayout

            android:id="@+id/search_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bar_backgound_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="13dp"
                android:paddingVertical="11dp"
                android:src="@drawable/ic_search"
                app:tint="@color/yp_dark_grey" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingStart="9dp"
                android:textSize="@dimen/settings_content_text_size_16sp"
                android:fontFamily="@font/ys_display_medium"
                android:textFontWeight="400"
                android:background="@null"
                android:hint="@string/st_search"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/yp_black_background"
                android:textColorHint="@color/yp_dark_grey" />

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="12dp"
                android:paddingEnd="14dp"
                android:src="@drawable/ic_clear_search"
                android:visibility="gone"
                 />
        </LinearLayout>
    </LinearLayout>