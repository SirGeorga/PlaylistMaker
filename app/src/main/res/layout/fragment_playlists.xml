<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.playlistmaker.library.ui.fragments.PlaylistsFragment">

    <Button
        android:id="@+id/btNewPlaylist"
        style="@style/SearchUpdateButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/st_new_playlist"
        android:textSize="14sp"
        android:visibility="visible"
        app:cornerRadius="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPlaylistsPlaceholderImg"
        android:layout_width="@dimen/dm_120dp"
        android:layout_height="@dimen/dm_120dp"
        android:layout_marginTop="@dimen/dm_106dp"
        android:src="@drawable/ic_search_no_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvPlaylistsPlaceholderTxt"
        style="@style/SearchPlaceholderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_16"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/st_playlists_empty"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlaylistsPlaceholderImg" />

</androidx.constraintlayout.widget.ConstraintLayout>
