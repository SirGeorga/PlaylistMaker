<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenBackgoundStyle">
        <item name="android:background">@color/yp_blue_background</item>
    </style>

    <style name="MainHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top_element_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/top_element_margin_bottom</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top_element_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/top_element_margin_bottom</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="NightModeSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_items_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_content_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/yp_switch_grey</item>
        <item name="trackTint">@color/yp_switch_light_grey</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_items_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_content_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MainBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginBottom">@dimen/main_bt_margin_bottom_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/main_bt_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_bt_icon_padding</item>
        <item name="iconTint">@color/btn_content</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:textSize">@dimen/settings_content_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/st_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textColorHint">@color/yp_dark_grey</item>
    </style>

    <style name="EditTextSearchIconsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/yp_dark_grey</item>
    </style>

    <style name="EditTextBackgroundStyle">
        <item name="android:background">@drawable/search_bar_backrgound_shape_ypgrey</item>
    </style>

    <style name="TrackItemNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_content_text_size_16sp</item>
    </style>

    <style name="TrackItemArtistStyle">
        <item name="android:textColor">@color/yp_dark_grey</item>
        <item name="android:textSize">@dimen/artist_text_size_11</item>
    </style>

    <style name="TrackItemIconsStyle">
        <item name="tint">@color/yp_dark_grey</item>
    </style>

    <style name="SearchPlaceholderTextStyle">
        <item name="android:textColor">@color/yp_black_background</item>
    </style>

    <style name="SearchUpdateButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/yp_black_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchPlaceholderIconStyle">
        <item name="android:fillColor">@color/yp_black_background</item>
    </style>

    <style name="PlayerBackgroudStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textColorHint">@color/yp_black_background</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">@dimen/search_bar_corner_radius_8dp</item>
    </style>

    <style name="TabsTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dm_14sp</item>
    </style>

    <style name="TabsStyle">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation_item</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation_item</item>
    </style>

    <style name="BottomNavigationStyle.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dm_12sp</item>
    </style>

    <style name="PlaylistCardStyle">
        <item name="android:textColor">@color/btn_content</item>
        <item name="android:textSize">@dimen/dm_12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="PlaylistBottomSheetDescriptionStyle">
        <item name="android:textColor">@color/yp_dark_grey</item>
        <item name="android:textSize">@dimen/artist_text_size_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="RefreshButtonStyle" parent="Theme.MaterialComponents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dm_14sp</item>
        <item name="cornerRadius">@dimen/dm_54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CreatePlaylistButtonStyle" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_dark_grey</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dm_16dp</item>
        <item name="cornerRadius">@dimen/main_bt_margin_bottom_8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PlaylistBottomSheetShareStyle">
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textSize">@dimen/settings_content_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PlaylistBottomSheetTitleStyle">
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textSize">@dimen/dm_19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlaylistDetailsStyle">
        <item name="android:textColor">@color/yp_black_background</item>
        <item name="android:textSize">@dimen/dm_18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>